{
    "name": "react-redux-saga-ts-vite-boilerplate",
    "version": "0.0.2",
    "scripts": {
        "start": "npm run build:css && concurrently \"npm run watch:css\" \"vite\"",
        "watch:css": "npx tailwindcss -i ./src/index.css -o ./src/styles.css --watch",
        "build:css": "npx tailwindcss -i ./src/index.css -o ./src/styles.css",
        "build": "tsc && npm run build:css && vite build",
        "preview": "vite preview",
        "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|tsx|json)\"",
        "release": "standard-version",
        "prettier-check": "prettier src --check",
        "prettier": "prettier src --list-different",
        "husky-install": "husky install"
    },
    "dependencies": {
        "@hookform/resolvers": "^2.9.0",
        "@uiball/loaders": "^1.2.6",
        "axios": "^0.27.2",
        "concurrently": "^7.2.1",
        "formik": "^2.2.9",
        "jwt-decode": "^3.1.2",
        "npm-check-updates": "^13.1.1",
        "react": "^18.1.0",
        "react-cookies": "^0.1.1",
        "react-dom": "^18.1.0",
        "react-hook-form": "^7.31.3",
        "react-loader-spinner": "^5.1.5",
        "react-modal": "^3.15.1",
        "react-redux": "^8.0.2",
        "react-router": "^6.3.0",
        "react-router-dom": "^6.3.0",
        "react-spinners": "^0.12.0",
        "react-toastify": "^9.0.3",
        "redux": "^4.2.0",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.1.3",
        "yup": "^0.32.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.2",
        "@commitlint/config-conventional": "^17.0.2",
        "@reduxjs/toolkit": "^1.8.3",
        "@types/node": "^17.0.40",
        "@types/react": "^18.0.12",
        "@types/react-cookies": "^0.1.0",
        "@types/react-dom": "^18.0.5",
        "@types/react-modal": "^3.13.1",
        "@types/redux-logger": "^3.0.9",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "@vitejs/plugin-react": "^1.3.2",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^2.6.2",
        "sass": "^1.52.2",
        "standard-version": "^9.5.0",
        "typescript": "^4.7.3",
        "vite": "^2.9.10",
        "vite-tsconfig-paths": "^3.5.0"
    }
}
